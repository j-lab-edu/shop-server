<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dev.shopserver.mapper.ProductSearchMapper">
    <select id="searchProducts" resultType="com.dev.shopserver.dto.ProductDTO">
        SELECT productId,
               productName,
               price,
               reviewCount,
               totalStarRating,
               categoryId,
               purchaseCount
        FROM product
        <where>
            <if test="productName!=null">
                productName LIKE CONCAT('%',#{productName},'%')
            </if>
            <if test="categoryId!=null">
                AND categoryId = #{categoryId}
            </if>
                AND productStatus != 'DELETED'
        </where>
        <choose>
            <when test="sortCriteria.toString() == 'STAR_RATING'">
                ORDER BY totalStarRating ASC
            </when>
            <when test="sortCriteria.toString() == 'REVIEW'">
                ORDER BY reviewCount ASC
            </when>
            <when test="sortCriteria.toString() == 'HIGH_PRICE'">
                ORDER BY price DESC
            </when>
            <when test="sortCriteria.toString() == 'LOW_PRICE'">
                ORDER BY price ASC
            </when>
            <otherwise>
                ORDER BY purchaseCount DESC
            </otherwise>
        </choose>
    </select>

</mapper>