<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <!--    해당 설정파일에서 사용하는 프로퍼티-->
    <Properties>
        <Property name="LOG_DATEFORMAT_PATTERN">{yyyy-MM-dd HH:mm:ss.SSS}</Property>
        <Property name="LOG_LEVEL_PATTERN">{-%5p}{FATAL=red blink, ERROR=red, WARN=yellow bold, INFO=green,
            DEBUG=green bold, TRACE=blue} %style{${sys:PID}}{magenta} [%15.15tn-%3tid] %style{%-40.40C{1.}}{cyan} :
            %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}</Property>
    </Properties>
    <!--    LogEvent를 전달해주는 Appender-->
    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout disableAnsi="false" pattern="%d${LOG_DATEFORMAT_PATTERN} %highlight${LOG_LEVEL_PATTERN}"/>
        </Console>
        <RollingFile name="FileAppender"
                     fileName="./logs/log4j2-file.log"
                     filePattern="./logs/log4j2-file-%d{yyyy-MM-dd}_%i.log.gz">
            <PatternLayout pattern="%d${LOG_DATEFORMAT_PATTERN} %highlight${LOG_LEVEL_PATTERN}" charset="UTF-8"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="1000KB"/>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
            <DefaultRolloverStrategy max="10" fileIndex="min"/>
        </RollingFile>

        <RollingFile name="ErrorLogFileAppender"
                     fileName="./logs/log4j2-error.log"
                     filePattern="./logs/log4j2-error-%d{yyyy-MM-dd}_%i.log.gz">
            <Filters>
                <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY" />
            </Filters>
            <PatternLayout pattern="%d${LOG_DATEFORMAT_PATTERN} %highlight${LOG_LEVEL_PATTERN}" charset="UTF-8"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="1000KB"/>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
            <DefaultRolloverStrategy max="10" fileIndex="min"/>
        </RollingFile>
    </Appenders>
    <!--    실제 Logger-->
    <Loggers>
        <Root level="INFO" additivity="false">
            <AppenderRef ref="ConsoleAppender"/>
        </Root>

        <Logger name="com.dev.shopserver" additivity="false">
            <AppenderRef ref="FileAppender" level="DEBUG"/>
            <AppenderRef ref="ErrorLogFileAppender" />
            <!-- 개발시에만 ConsoleAppender 사용 -->
            <AppenderRef ref="ConsoleAppender" />
        </Logger>

        <Logger name="org.springframework" additivity="false">
            <AppenderRef ref="FileAppender" level="DEBUG"/>
            <AppenderRef ref="ErrorLogFileAppender" />
        </Logger>
    </Loggers>
</Configuration>